@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/styleSignup.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>
    <section class="vh-100 bg-image"
             style="background-image: url('/images/cod.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 200vh; margin: 0;">

        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card bg-dark text-light" style="border-radius: 50px;width: 35rem; height:43rem;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-3 fs-md-1 fs-sm-2 fs-1 text-center text-white fw-bold" style="text-shadow: 8px 8px 10px rgb(0,0,0);">
                                    ARCADE 
                                    <img src="/images/g.png" alt="" class="img-fluid" style="margin-left: -2%; width: 2em;">
                                </h2>
                                <img src="/images/u.png" alt="" class="img-fluid mb-4 offset-5">
                                
                                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Email" style="border-radius: 20px" autocomplete="username" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" style="border-radius: 20px" autocomplete="new-password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label asp-for="Input.ConfirmPassword"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password" style="border-radius: 20px" autocomplete="new-password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-success btn-block btn-lg mt-3 gradient-custom-4 px-4 py-2 fs-md-1 fs-sm-2 fs-1  text-white fw-bold"
                                                style="border-radius: 100px; border:none;background-color: #442107;">
                                            Confirm
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    
</body>
</html>
