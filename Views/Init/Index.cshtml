@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/styleIndex.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arcade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    @if (ViewBag.ErrorMessage != null) {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-1 col-2 py-4">
                <img src="/images/u.png" alt="" class="img-fluid">
            </div>
        </div>
    </div>
    <div class="container mt-3 mt-md-4 mt-lg-4">
        <div class="row align-items-end" style="min-height: 200px;">
            <div class="col-12">
                <p class="fs-md-1 fs-sm-2 fs-1 text-center text-white fw-bold" style="text-shadow: 8px 8px 10px rgb(0,0,0);">
                    WELCOME TO <br>
                    ARCADE <img src="/images/g.png" alt="" class="img-fluid" style="margin-left: -2%; width: 2em;">
                </p>
            </div>
        </div>
    </div>

    <div class="container mt-3 mt-md-4 mt-lg-5">
        <div class="row">
            <div class="col-12">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                    <button type="submit" class="btn btn-success fs-md-2 fs-sm-5 fs-2 bt-block px-3" style="border-radius: 100px; background-color: #442107;">SIGN UP</button>
                </a>
            </div>
        </div>
        <div class="row mt-3 mt-md-4 mt-lg-5">
            <div class="col-12">                    
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                    <button type="submit" class="btn btn-success fs-md-2 fs-sm-5 fs-2 px-4" style="border-radius: 100px; background-color: #442107;">LOG IN</button>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
